<%= turbo_stream.update "global_modal" do %>
  <div class="modal fade" id="similarShowsModal" tabindex="-1" aria-labelledby="similarShowsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content bg-dark text-white border-secondary">
        <div class="modal-header border-secondary">
          <h5 class="modal-title" id="similarShowsModalLabel">Similar Shows</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body p-0">
          <div class="list-group list-group-flush rounded-bottom">
            <% @similar_shows.each do |show| %>
              <div class="list-group-item bg-dark border-secondary text-white p-3 d-flex align-items-center gap-3">
                <% if show.image_url %>
                  <img src="<%= show.image_url %>" class="rounded shadow-sm" style="width: 48px; height: 48px; object-fit: cover;">
                <% else %>
                  <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                    <span class="small">N/A</span>
                  </div>
                <% end %>
                <div class="flex-grow-1 min-w-0">
                  <div class="fw-bold text-truncate" title="<%= show.name %>"><%= show.name %></div>
                  <div class="small text-secondary text-truncate"><%= show.publisher %></div>
                </div>
                <%= button_to saved_shows_path(id: show.id), method: :post, class: "btn btn-sm btn-success rounded-pill px-3 fw-bold", title: "Save" do %>
                  Save
                <% end %>
              </div>
            <% end %>
            <% if @similar_shows.empty? %>
              <div class="p-4 text-center text-secondary fst-italic">
                No matches found on Spotify.
              </div>
            <% end %>
          </div>
        </div>
        <div class="modal-footer border-secondary">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  <script>
    {
      const modalElement = document.getElementById('similarShowsModal');
      const modal = new bootstrap.Modal(modalElement);
      modal.show();
    }
  </script>
<% end %>
